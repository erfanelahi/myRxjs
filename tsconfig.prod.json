{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src",
    "types": [
      "core-js",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "src/compiled/node_modules",
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "atom": {
    "rewriteTsconfig": false
  }
}